<h2>Basic operations</h2>
<form action="/" method="post">
  <label for="num1">First number:</label><input type="text" name="num1" id="num1">
  <label for="op">Operator:</label><select name="op" id="op">
    <option value="+">plus</option>
    <option value="-">minus</option>
    <option value="*">multiplied by</option>
    <option value="/">divided by</option>
  </select>
  <label for="num2">Second number:</label><input type="text" name="num2" id="num2">
  <button>Calc It!</button>
  <%= "<h2>#{@result}</h2>" if @result %>
</form>